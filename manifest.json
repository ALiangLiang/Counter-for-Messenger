{
  "name" : "Counter for Messenger",
  "description" : "",
  "devtools_page" : "devtools.html",
  "background" : {
    "scripts" : ["background.js"]
  },
  "content_scripts" : [{
      "js" : ["main.js"],
      "matches" : ["*://*.messenger.com/*"],
      "run_at" : "document_end"
    }
  ],
  "browser_action" : {
    "default_icon" : {
    },
    "default_title" : "Counter for Messenger"
  },
  "icons" : {},
  "manifest_version" : 2,
  "content_security_policy" : "script-src 'self' https://www.google.com https://checkout.google.com; object-src 'self'",
  "version" : "0.0.1",
  "permissions" : [
    "tabs",
    "webRequest",
    "declarativeContent",
    "*://*.messenger.com/*"
  ]
}
